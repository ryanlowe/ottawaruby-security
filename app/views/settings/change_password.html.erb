<%= render :partial => 'settings/tabs' %>

<%= error_messages_for :user %>

<% form_for :user, :url => url_for(:action => 'update_password') do |f| -%>

<p><label for="password">New Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Confirm New Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Save New Password' %></p>

<% end -%>